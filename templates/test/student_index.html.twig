{% extends 'student_base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}

    <style>
        .search {
            display: flex;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .search-input {
            width: 100%;
        }
    </style>

    <div class="container">
        {{ form_start(formSearch) }}
        <div class="search">
            <div class="search-input">
                {{ form_widget(formSearch.query, {
                    'attr': {
                        'placeholder': 'Поиск по тестам',
                    }
                }) }}
            </div>
            <div class="search-submit">
                {{ form_widget(formSearch.submit) }}
            </div>
            <div class="clear-search">
                <a href="{{ path('student_test') }}" class="btn btn-outline-dark">Очистить</a>
            </div>
        </div>
        {{ form_end(formSearch) }}

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">{{ knp_pagination_sortable(tests, 'Тест', ['t.name']) }}</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            {% for test in tests %}
                <tr>
                    <td>{{ test.name }}</td>
                    <td>
                        <a href="{{ path('student_test_pass', {'id': test.id}) }}">Пройти тест</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination">
            {{ knp_pagination_render(tests) }}
        </div>
    </div>
{% endblock %}
