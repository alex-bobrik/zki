{% extends 'teacher_base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}

    <style>
        .pagination {
            width: 100%;
            text-align: center;
        }
    </style>

    <div class="container" style="margin-top: 20px">
        <a href="{{ path('admin_test_new') }}">Новый тест</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">{{ knp_pagination_sortable(tests, 'Тест', ['t.name']) }}</th>
                    <th scope="col">Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for test in tests %}
                <tr>
                    <td>
                        <a href="{{ path('admin_test_info', {'id': test.id}) }}">{{ test.name }}</a>
                    </td>
                    <td>
                        <a href="{{ path('admin_test_delete', {'id': test.id}) }}">Удалить</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="pagination">
            {{ knp_pagination_render(tests) }}
        </div>
    </div>

{% endblock %}
