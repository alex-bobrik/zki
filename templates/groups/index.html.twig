{% extends 'teacher_base.html.twig' %}

{% block title %}Hello GroupsController!{% endblock %}

{% block body %}
    <style>
        .search {
            display: flex;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .search-input {
            width: 100%;
        }
    </style>

<div class="container">
    <a href="{{ path('admin_groups_new') }}">Добавить группу</a>

    {{ form_start(formSearch) }}
    <div class="search">
        <div class="search-input">
            {{ form_widget(formSearch.query, {
                'attr': {
                    'placeholder': 'Поиск по группам',
                }
            }) }}
        </div>
        <div class="search-submit">
            {{ form_widget(formSearch.submit) }}
        </div>
        <div class="clear-search">
            <a href="{{ path('admin_groups') }}" class="btn btn-outline-dark">Очистить</a>
        </div>
    </div>
    {{ form_end(formSearch) }}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">{{ knp_pagination_sortable(groups, 'Группа', ['g.name']) }}</th>
            <th scope="col">Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>
                    <a href="{{ path('admin_stats_group', {'id': group.id}) }}">{{ group.name }}</a>
                </td>
                <td>
                    <a href="{{ path('admin_groups_edit', {'id': group.id}) }}">Изменить</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="pagination">
        {{ knp_pagination_render(groups) }}
    </div>
</div>



{% endblock %}
