<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {#  Favicon  #}
    <link rel="icon" href="{{ asset('files/images/favicon.ico') }}" type="image/ico"/>
    <link rel="shortcut icon" href="{{ asset('files/images/favicon.ico') }}" type="image/x-icon"/>

    {% block stylesheets %}
        <link rel="stylesheet" href={{ asset('css/bootstrap.css') }}>
        <link rel="stylesheet" href={{ asset('css/bootstrap-grid.css') }}>
        <link rel="stylesheet" href={{ asset('css/global.css') }}>
        <link rel="stylesheet" href={{ asset('css/quizes-questions_admin.css') }}>
        <link rel="stylesheet" href={{ asset('js/embeddedFormHelper.js') }}>
    {% endblock %}
</head>
<body>

<style>
    body::after {
        content: "";
        background: url("{{ asset('files/images/bg.jpg') }}");

        opacity: 0.08;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        position: absolute;
        z-index: -1;
    }
</style>

{% block navbar %}

{% if is_granted('ROLE_ADMIN') %}

    {# ADMIN NAVBAR #}
    <div class="container-xl">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="navbar-brand" href="{{ path('razdel') }}">
                            <img src="{{ asset('files/images/logo.png') }}" width="30" height="40" alt="">
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('razdel') }}">Разделы</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('lab') }}">Лабораторные</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('admin_test') }}">Тесты</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('admin_groups') }}">Группы</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('admin_students') }}">Учащиеся</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('admin_stats_between') }}">Статистика</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('admin_lab_complete') }}">Зачесть ЛПР</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('student_account_password-edit') }}">Изменить пароль</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('system') }}">О программе</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Выход</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
{% elseif is_granted('ROLE_USER') %}

    {# USER NAVBAR #}
    <div class="container-xl">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="navbar-brand" href="{{ path('razdel') }}">
                            <img src="{{ asset('files/images/logo.png') }}" width="30" height="40" alt="">
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('razdel') }}">Разделы</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('lab') }}">Лабораторные</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('student_test') }}">Тесты</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('student_account') }}">Статистика</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('student_account_password-edit') }}">Изменить пароль</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('system') }}">О программе</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Выход</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
{% endif %}

{% endblock %}




{% block body %}{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="{{ asset('js/embeddedFormHelper.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.12/js/bootstrap-select.min.js"></script>
{% endblock %}
</body>
</html>
