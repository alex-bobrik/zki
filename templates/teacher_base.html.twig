            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                {#        <a class="navbar-brand" href="#">Navbar</a>#}
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin') }}">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('razdel') }}">Лекции</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_students') }}">Студенты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_groups') }}">Группы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_test') }}">Тесты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_stats_between') }}">Статистика</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Выход</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

    {% endblock %}

        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            <script src="{{ asset('js/embeddedFormHelper.js') }}"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.12/js/bootstrap-select.min.js"></script>
        {% endblock %}
    </body>
</html>
