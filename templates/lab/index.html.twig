{% extends 'student_base.html.twig' %}

{% block title %}Hello LabController!{% endblock %}

{% block body %}

    <style>
        .search {
            display: flex;
        }

        .search-input {
            width: 100%;
        }
    </style>

    <div class="container" style="margin-top: 20px">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_lab_new') }}">Новая лабораторная</a>
            <hr>
        {% endif %}

        {{ form_start(formSearch) }}
        <div class="search">
            <div class="search-input">
                {{ form_widget(formSearch.query, {
                    'attr': {
                        'placeholder': 'Поиск по лабораторным',
                    }
                }) }}
            </div>
            <div class="search-submit">
                {{ form_widget(formSearch.submit) }}
            </div>
            <div class="clear-search">
                <a href="{{ path('lab') }}" class="btn btn-outline-dark">Очистить</a>
            </div>
        </div>
        {{ form_end(formSearch) }}

        <h2>Лабораторные:</h2>
        {% for lab in labs %}
            <div class="lab">
                <a href="{{ path('lab_info', {'id': lab.id}) }}">{{ lab.name }}</a>
            </div>
        {% endfor %}
        <div class="pagination">
            {{ knp_pagination_render(labs) }}
        </div>
    </div>

{% endblock %}
