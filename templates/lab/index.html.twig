{% extends 'student_base.html.twig' %}

{% block title %}Hello LabController!{% endblock %}

{% block body %}

    <div class="container" style="margin-top: 20px">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_lab_new') }}">Новая лабораторная</a>
            <hr>
        {% endif %}

        {% for lab in labs %}
            <div class="lab">
                <a href="{{ path('lab_info', {'id': lab.id}) }}">{{ lab.name }}</a>
            </div>
        {% endfor %}
        <div class="pagination">
            {{ knp_pagination_render(labs) }}
        </div>
    </div>

{% endblock %}
