{% extends 'base.html.twig' %}

{% block title %}Войдите{% endblock %}

{% block body %}

    <style>

        body::after {
            content: "";
            background: url("{{ asset('files/images/books.png') }}");

            opacity: 0.4;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            position: absolute;
            z-index: -1;
        }

        form {
            /*margin-top: 20vh;*/
            /*width: 500px;*/
            position: absolute;
            width: 500px;
            top: 25%;
            left: 35%;
        }
    </style>
{#    <div class="container">#}
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Вы авторизированы как {{ app.user.username }}, <a href="{{ path('app_logout') }}">Выход</a>
                </div>
            {% endif %}

            {#    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>#}
            <label for="inputUsername">Логин</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
            <label for="inputPassword">Пароль</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-warning" type="submit" style="margin-top: 10px; display: block; width: 100%">
                Вход
            </button>
        </form>
{#    </div>#}

{% endblock %}
